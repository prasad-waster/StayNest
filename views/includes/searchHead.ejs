<!-- Airbnb-style Search Bar & Categories (Updated with centered & larger icons) -->
<header class="sticky-top bg-white shadow-sm">
  <div class="search-section">
    <div class="search-bar mt-1">
      <div class="search-col">
        <div class="search-label"><b>Where</b></div>
        <input type="text" class="search-input" placeholder="Location" />
      </div>
      <div class="search-col">
        <div class="search-label"><b>Check in</b></div>
        <input type="date" class="search-input" placeholder="Add dates" />
      </div>
      <div class="search-col">
        <div class="search-label"><b>Check out</b></div>
        <input type="date" class="search-input" placeholder="Add dates" />
      </div>
