        <i class="fas fa-campground"></i>Camping
      </a>
      <a href="/listings/category/Beach" class="category-item">
        <i class="fas fa-umbrella-beach"></i>Beach
      </a>
      <a href="/listings/category/Mountains" class="category-item">
        <i class="fas fa-mountain"></i>Mountains
      </a>
      <a href="/listings/category/Castles" class="category-item">
        <i class="fas fa-chess-rook"></i>Castles
      </a>
      <a href="/listings/category/City" class="category-item">
        <i class="fas fa-city"></i>City
      </a>
      <a href="/listings/category/OMG!" class="category-item">
        <i class="fas fa-magic"></i>OMG!
      </a>
      <a href="/listings/category/Deals" class="category-item text-danger">
        <i class="fas fa-tags"></i>Deals
      </a>
